<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <gradient
                android:startColor="#FF9040"
                android:endColor="#D24"
                android:angle="225"
                android:type="linear"/>
            <stroke android:width="2dp" android:color="#D2491E"/>
        </shape>
    </item>

    <item android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">

        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="#FF9040"
                android:endColor="#D24"
                android:angle="225"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>
