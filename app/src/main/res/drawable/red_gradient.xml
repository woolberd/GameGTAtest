<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <gradient
                android:startColor="#E26060"
                android:endColor="#8E3434"
                android:angle="90"/>
        </shape>
    </item>

    <item android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">

        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>

            <gradient android:startColor="#8E3434"
                android:endColor="#E26060"
                android:angle="90"/>
        </shape>

    </item>
</layer-list>